    <script is:inline define:vars={{ data }}>
        function val(id) {
            const el = document.getElementById(id);
            return el ? (parseFloat(el.value) || 0) : 0;
        }

        function updateCalculator() {
            const varstaActuala = val('varstaActuala');
            const salariuNetActual = val('salariuNet');
            const soldPilon2 = val('soldPilon2');
            const varstaPensionare = val('varstaPensionare');

            document.getElementById('varstaActualaVal').innerText = varstaActuala + " ani";
            document.getElementById('varstaPensionareVal').innerText = varstaPensionare + " ani";

            const aniContribuire = varstaPensionare - varstaActuala;

            if (aniContribuire <= 0) {
                document.getElementById('pensieAziDisplay').innerText = "VÃ¢rstÄƒ invalidÄƒ";
                return;
            }

            // Pasul 1: Salariu Viitor (Nominal)
            const ultimulSalariuNet = salariuNetActual * Math.pow(1 + data.crestere_salariala_medie, aniContribuire);

            // Pasul 2: Pilonul 1 (Stat)
            const pensiePilon1Nominal = ultimulSalariuNet * data.pilon1.rata_inlocuire;

            // Pasul 3: Pilonul 2 (Privat)
            // Gross = Net / 0.585 approx
            const salariuBrutActual = salariuNetActual / 0.585;
            const contributiePilon2LunaraInitiala = salariuBrutActual * data.pilon2.procent_contributie;

            let totalAcumulatPilon2 = soldPilon2;
            const r_anual = data.pilon2.randament_mediu_anual;
            const g_anual = data.crestere_salariala_medie;

            // Calcul compus cu contributii lunare si crestere salariala anuala
            for (let an = 1; an <= aniContribuire; an++) {
                const contributieLunaraAnuala = contributiePilon2LunaraInitiala * Math.pow(1 + g_anual, an - 1);
                for (let luna = 1; luna <= 12; luna++) {
                    totalAcumulatPilon2 = totalAcumulatPilon2 * Math.pow(1 + r_anual, 1/12) + contributieLunaraAnuala;
                }
            }

            const aniPensie = data.speranta_viata - varstaPensionare;
            const pensiePilon2Nominal = totalAcumulatPilon2 / (aniPensie * 12);

            // Pasul 4: Total si Ajustare
            const totalPensieNominala = pensiePilon1Nominal + pensiePilon2Nominal;
            const putereCumparareAzi = totalPensieNominala / Math.pow(1 + data.rata_inflatie_medie, aniContribuire);

            // Afisare
            document.getElementById('pensieAziDisplay').innerText = Math.round(putereCumparareAzi).toLocaleString() + " RON";
            const anPensionare = new Date().getFullYear() + aniContribuire;
            document.getElementById('pensieViitorDisplay').innerText = `Echivalentul a ${Math.round(totalPensieNominala).toLocaleString()} RON Ã®n anul ${anPensionare}`;

            document.getElementById('pilon1Sum').innerText = Math.round(pensiePilon1Nominal).toLocaleString() + " RON";
            document.getElementById('pilon2Sum').innerText = Math.round(pensiePilon2Nominal).toLocaleString() + " RON";

            // Chart
            document.getElementById('salariuActualBarVal').innerText = Math.round(salariuNetActual).toLocaleString() + " RON";
            document.getElementById('pensieAziBarVal').innerText = Math.round(putereCumparareAzi).toLocaleString() + " RON";

            const ratio = (putereCumparareAzi / salariuNetActual) * 100;
            document.getElementById('pensieAziBar').style.width = Math.min(ratio, 100) + "%";

            const gap = salariuNetActual - putereCumparareAzi;
            document.getElementById('povertyGapText').innerText = `DiferenÈ›Äƒ: -${Math.round(gap).toLocaleString()} RON (Gap de SÄƒrÄƒcie)`;
            document.getElementById('deficitLunar').innerText = Math.round(Math.max(0, gap)).toLocaleString() + " RON";

            // CTA: Cat ar trebui sa economiseasca azi pentru a acoperi gap-ul
            if (gap > 0) {
                const r = r_anual / 12;
                const n = aniContribuire * 12;
                const sumaNecesaraNominala = gap * Math.pow(1 + data.rata_inflatie_medie, aniContribuire) * (aniPensie * 12);
                const economisireLunara = sumaNecesaraNominala / ((Math.pow(1 + r, n) - 1) / r);
                document.getElementById('ctaEconomisire').innerText = `Ar trebui sÄƒ economiseÈ™ti ${Math.round(economisireLunara).toLocaleString()} RON/lunÄƒ suplimentar`;
            } else {
                document.getElementById('ctaEconomisire').innerText = "EÈ™ti pe drumul cel bun! Pensia ta acoperÄƒ salariul actual.";
                document.getElementById('deficitLunar').innerText = "0 RON";
            }

            // WhatsApp
            const btnDesktop = document.getElementById('whatsappBtn');
            const btnMobile = document.getElementById('whatsappBtnFloating');

            const mesaj = `Am calculat pensia pe Manualul.ro. Voi avea o putere de cumpÄƒrare de doar ${Math.round(putereCumparareAzi).toLocaleString()} RON. Tu È™tii cÃ¢t vei primi? ${window.location.href}`;
            const finalLink = `https://api.whatsapp.com/send?text=${encodeURIComponent(mesaj)}`;

            if (btnDesktop) btnDesktop.href = finalLink;
            if (btnMobile) btnMobile.href = finalLink;
        }

        const inputs = document.querySelectorAll('input');
        inputs.forEach(input => {
            input.addEventListener('input', updateCalculator);
        });

        updateCalculator();
    </script>
</Layout>
