    <script is:inline>
        function updateCalculator() {
            const suprafataVal = parseFloat(document.getElementById('suprafata_val').value) || 0;
            const unitate = document.getElementById('unitate').value;
            const distRand = parseFloat(document.getElementById('dist_rand').value) || 1;
            const distPlanta = parseFloat(document.getElementById('dist_planta').value) || 1;

            let suprafataMp = suprafataVal;
            if (unitate === 'ari') suprafataMp = suprafataVal * 100;
            else if (unitate === 'ha') suprafataMp = suprafataVal * 10000;

            const spatiuPerPlanta = (distRand * distPlanta) / 10000; // in mp
            const totalPlante = Math.floor(suprafataMp / spatiuPerPlanta);

            const display = document.getElementById('rezultatDisplay');
            display.innerText = totalPlante.toLocaleString() + " fire/seminÈ›e";

            // WhatsApp Link
            const btnDesktop = document.getElementById('whatsappBtn');
            const btnMobile = document.getElementById('whatsappBtnFloating');

            const mesaj = `Am calculat densitatea de plantare: am nevoie de aproximativ ${totalPlante.toLocaleString()} fire/seminÈ›e pentru terenul meu. CalculeazÄƒ È™i tu: ${window.location.href}`;
            const finalLink = `https://api.whatsapp.com/send?text=${encodeURIComponent(mesaj)}`;

            if (btnDesktop) btnDesktop.href = finalLink;
            if (btnMobile) btnMobile.href = finalLink;
        }

        // Event Listeners
        document.querySelectorAll('input, select').forEach(el => {
            el.addEventListener('input', updateCalculator);
        });

        // Initial run
        updateCalculator();
    </script>
