                            <div class="flex justify-between text-sm mb-1">
                                <span class="text-gray-400">Banii tƒÉi (Depu»ôi)</span>
                                <span id="rezultatDepus" class="font-bold">0 Lei</span>
                            </div>
                            <div class="w-full bg-gray-700 h-2 rounded-full overflow-hidden">
                                <div id="barDepus" class="h-full bg-gray-400" style="width: 50%"></div>
                            </div>
                        </div>

                        <div>
                            <div class="flex justify-between text-sm mb-1">
                                <span class="text-yellow-400 font-bold">Dob√¢ndƒÉ (Bani produ»ôi)</span>
                                <span id="rezultatDobanda" class="font-bold text-yellow-400">0 Lei</span>
                            </div>
                            <div class="w-full bg-gray-700 h-2 rounded-full overflow-hidden">
                                <div id="barDobanda" class="h-full bg-yellow-500" style="width: 50%"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="stickyBar" class="fixed bottom-0 left-0 w-full bg-white/95 backdrop-blur-md border-t border-yellow-200 p-4 shadow-[0_-10px_25px_rgba(0,0,0,0.1)] md:hidden z-40">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-[10px] font-black uppercase text-gray-400 leading-none mb-1">Avere TotalƒÉ</p>
                    <p id="stickyTotal" class="text-2xl font-black text-yellow-600 leading-none">0 Lei</p>
                </div>
                <button onclick="window.scrollTo({top: 0, behavior: 'smooth'})" class="bg-gray-900 text-white px-4 py-2 rounded-xl text-xs font-bold active:scale-95 transition-transform">
                    RecalculeazƒÉ ‚Üë
                </button>
            </div>
        </div>

    </main>

    <script is:inline>
        // Inputs
        const inStart = document.getElementById('inStart');
        const inLunar = document.getElementById('inLunar');
        const inAni = document.getElementById('inAni');
        const inProcent = document.getElementById('inProcent');
        const btnWhatsapp = document.getElementById('whatsappBtn');
        const btnWhatsappFloating = document.getElementById('whatsappBtnFloating');

        // Outputs
        const outTotal = document.getElementById('rezultatTotal');
        const outDepus = document.getElementById('rezultatDepus');
        const outDobanda = document.getElementById('rezultatDobanda');
        const barDepus = document.getElementById('barDepus');
        const barDobanda = document.getElementById('barDobanda');
        const stickyTotal = document.getElementById('stickyTotal');

        function calculate() {
            const start = parseFloat(inStart.value) || 0;
            const lunar = parseFloat(inLunar.value) || 0;
            const ani = parseFloat(inAni.value) || 0;
            const procent = parseFloat(inProcent.value) || 0;

            const rate = procent / 100;
            const months = ani * 12;

            // FormulƒÉ Dob√¢ndƒÉ CompusƒÉ cu contribu»õii lunare
            // FV = P * (1 + r/n)^(nt) + PMT * [ ((1 + r/n)^(nt) - 1) / (r/n) ]
            // Unde n = 12 (lunar)
            
            const n = 12;
            const compoundInterestPrincipal = start * Math.pow(1 + rate/n, n * ani);
            const compoundInterestSeries = lunar * ( (Math.pow(1 + rate/n, n * ani) - 1) / (rate/n) );
            
            const total = compoundInterestPrincipal + compoundInterestSeries;
            const totalDepus = start + (lunar * months);
            const totalDobanda = total - totalDepus;

            // Actualizare UI
            outTotal.innerText = Math.round(total).toLocaleString() + " Lei";
            outDepus.innerText = Math.round(totalDepus).toLocaleString() + " Lei";
            outDobanda.innerText = "+" + Math.round(totalDobanda).toLocaleString() + " Lei";
            
            if(stickyTotal) stickyTotal.innerText = Math.round(total).toLocaleString() + " Lei";

            // Actualizare Bare Grafice
            const percentDepus = (totalDepus / total) * 100;
            const percentDobanda = (totalDobanda / total) * 100;

            barDepus.style.width = percentDepus + "%";
            barDobanda.style.width = percentDobanda + "%";

            // WhatsApp Update
            const mesaj = `Am simulat o investi»õie de ${Math.round(lunar).toLocaleString()} RON pe lunƒÉ timp de ${ani} ani pe Manualul.ro üí∞\nTotal estimat: ${Math.round(total).toLocaleString()} RON. Vezi »ôi tu: ${window.location.href}`;
            const link = `https://api.whatsapp.com/send?text=${encodeURIComponent(mesaj)}`;

            if (btnWhatsapp) btnWhatsapp.href = link;
            if (btnWhatsappFloating) btnWhatsappFloating.href = link;
        }

        // Listeners
        const inputs = [inStart, inLunar, inAni, inProcent];
        inputs.forEach(el => el.addEventListener('input', calculate));

        calculate();
    </script>
