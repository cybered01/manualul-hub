    <script is:inline>
        // Inputs
        const inStart = document.getElementById('inStart');
        const inLunar = document.getElementById('inLunar');
        const inAni = document.getElementById('inAni');
        const inProcent = document.getElementById('inProcent');
        const btnWhatsapp = document.getElementById('whatsappBtn');

        // Outputs
        const outTotal = document.getElementById('rezultatTotal');
        const outDepus = document.getElementById('rezultatDepus');
        const outDobanda = document.getElementById('rezultatDobanda');
        const barDepus = document.getElementById('barDepus');
        const barDobanda = document.getElementById('barDobanda');
        const stickyTotal = document.getElementById('stickyTotal');

        function calculate() {
            const start = parseFloat(inStart.value) || 0;
            const lunar = parseFloat(inLunar.value) || 0;
            const ani = parseFloat(inAni.value) || 0;
            const procent = parseFloat(inProcent.value) || 0;

            const rate = procent / 100;
            const months = ani * 12;

            // FormulƒÉ Dob√¢ndƒÉ CompusƒÉ cu contribu»õii lunare
            // FV = P * (1 + r/n)^(nt) + PMT * [ ((1 + r/n)^(nt) - 1) / (r/n) ]
            // Unde n = 12 (lunar)
            
            const n = 12;
            const compoundInterestPrincipal = start * Math.pow(1 + rate/n, n * ani);
            const compoundInterestSeries = lunar * ( (Math.pow(1 + rate/n, n * ani) - 1) / (rate/n) );
            
            const total = compoundInterestPrincipal + compoundInterestSeries;
            const totalDepus = start + (lunar * months);
            const totalDobanda = total - totalDepus;

            // Actualizare UI
            outTotal.innerText = Math.round(total).toLocaleString() + " Lei";
            outDepus.innerText = Math.round(totalDepus).toLocaleString() + " Lei";
            outDobanda.innerText = "+" + Math.round(totalDobanda).toLocaleString() + " Lei";
            
            if(stickyTotal) stickyTotal.innerText = Math.round(total).toLocaleString() + " Lei";

            // Actualizare Bare Grafice
            const percentDepus = (totalDepus / total) * 100;
            const percentDobanda = (totalDobanda / total) * 100;

            barDepus.style.width = percentDepus + "%";
            barDobanda.style.width = percentDobanda + "%";

            // WhatsApp Update
            if (btnWhatsapp) {
                const mesaj = `Fabrica de Bani - Manualul.ro üí∞\n\nDacƒÉ investesc ${lunar} Lei pe lunƒÉ timp de ${ani} ani (la ${procent}%), voi avea:\nTotal: ${Math.round(total).toLocaleString()} Lei\nDin care dob√¢ndƒÉ: ${Math.round(totalDobanda).toLocaleString()} Lei ‚ú®`;
                const link = `https://api.whatsapp.com/send?text=${encodeURIComponent(mesaj + "\n\nFƒÉ-»õi calculul aici: " + window.location.href)}`;
                btnWhatsapp.href = link;
            }
        }

        // Listeners
        const inputs = [inStart, inLunar, inAni, inProcent];
        inputs.forEach(el => el.addEventListener('input', calculate));

        calculate();
    </script>
