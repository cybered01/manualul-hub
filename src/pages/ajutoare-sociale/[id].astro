---
import Layout from '../../layouts/Layout.astro';
import { readFileSync } from 'fs';
import { parse } from 'csv-parse/sync';

export async function getStaticPaths() {
    const fileContent = readFileSync('./src/data/ajutoare.csv', 'utf-8');
    const records = parse(fileContent, { columns: true, skip_empty_lines: true, trim: true });
    return records.map((row) => ({ params: { id: row.id }, props: { info: row } }));
}

const { info } = Astro.props;

// Curățăm datele din CSV
const plafonMaxim = parseFloat(info.plafon_venit.replace(/[^\d]/g, ''));
const isOpen = info.status.toLowerCase() === 'deschis';
const statusColor = isOpen ? 'text-green-600 bg-green-50 border-green-200' : 'text-amber-600 bg-amber-50 border-amber-200';
---

<Layout 
    title={`Verificare ${info.titlu} - Vezi dacă te încadrezi`}
    description={`Calculator de eligibilitate pentru ${info.titlu}. Plafonul de venit este de ${info.plafon_venit} Lei. Află dacă primești ajutorul în 2026.`}
>
    <main class="max-w-2xl mx-auto px-4 pb-12">
        <nav class="py-4">
            <a href="/" class="text-sm text-green-700 hover:underline flex items-center gap-1">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                Înapoi la meniul principal
            </a>
        </nav>

        <header class="text-center mb-8">
            <span class={`inline-block px-3 py-1 rounded-full text-[10px] font-bold uppercase tracking-widest border mb-3 ${statusColor}`}>
                {info.status}
            </span>
            <h1 class="text-3xl font-black text-gray-900 tracking-tight mb-2">
                {info.titlu}
            </h1>
            <p class="text-gray-500 font-medium">{info.categorie}</p>
        </header>
        
        <div class="bg-white rounded-3xl shadow-xl border border-gray-100 overflow-hidden mb-8">
            <div class="p-8 bg-green-50 border-b border-green-100">
                <label for="venitInput" class="block text-sm font-bold text-green-800 uppercase tracking-wider mb-2">
                    Venitul tău net lunar (pe membru de familie):
                </label>
                <div class="relative">
                    <input 
                        type="number" 
                        id="venitInput" 
                        placeholder="Ex: 1500"
                        class="w-full text-4xl font-black bg-white border-2 border-green-200 rounded-2xl px-6 py-4 text-green-700 focus:border-green-500 focus:outline-none transition-all shadow-inner placeholder-green-100"
                    />
                    <div class="absolute right-6 top-1/2 -translate-y-1/2 text-green-200 font-bold text-xl pointer-events-none">LEI</div>
                </div>
                <p class="mt-2 text-xs text-green-700 font-bold">
                    Plafonul maxim admis: {info.plafon_venit} Lei
                </p>
            </div>

            <div class="p-8 text-center">
                <div id="rezultatBox" class="hidden">
                    <p id="mesajRezultat" class="text-2xl font-black mb-2"></p>
                    <p id="detaliiRezultat" class="text-gray-500 text-sm"></p>
                </div>

                <div id="mesajDefault" class="text-gray-400">
                    <p class="text-sm">Introdu venitul de mai sus pentru a vedea rezultatul.</p>
                </div>
            </div>
        </div>

        <section class="bg-white rounded-3xl p-8 border border-gray-100 shadow-sm">
            <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
                <span class="w-8 h-8 bg-green-100 text-green-700 rounded-lg flex items-center justify-center text-sm">i</span>
                Despre acest ajutor
            </h2>
            <div class="prose text-gray-600 text-sm leading-relaxed mb-6">
                <p>{info.descriere}</p>
            </div>
            
            <div class="bg-gray-50 rounded-xl p-4 border border-gray-100 flex justify-between items-center">
                <span class="text-xs font-bold text-gray-500 uppercase">Valoare Ajutor:</span>
                <span class="text-lg font-black text-green-600">{info.valoare_ajutor}</span>
            </div>
        </section>
    </main>

    <script is:inline define:vars={{ plafonMaxim }}>
        const input = document.getElementById('venitInput');
        const rezultatBox = document.getElementById('rezultatBox');
        const mesajDefault = document.getElementById('mesajDefault');
        const mesajRezultat = document.getElementById('mesajRezultat');
        const detaliiRezultat = document.getElementById('detaliiRezultat');

        input.addEventListener('input', (e) => {
            const venit = parseFloat(e.target.value);

            if (isNaN(venit)) {
                rezultatBox.classList.add('hidden');
                mesajDefault.classList.remove('hidden');
                return;
            }

            mesajDefault.classList.add('hidden');
            rezultatBox.classList.remove('hidden');

            if (venit <= plafonMaxim) {
                // ELIGIBIL
                mesajRezultat.innerText = "✅ Ești Eligibil!";
                mesajRezultat.className = "text-3xl font-black text-green-600 mb-2";
                detaliiRezultat.innerText = `Venitul tău este sub plafonul de ${plafonMaxim} Lei. Te încadrezi pentru acest ajutor.`;
            } else {
                // NE-ELIGIBIL
                mesajRezultat.innerText = "❌ Depășești Plafonul";
                mesajRezultat.className = "text-3xl font-black text-red-500 mb-2";
                detaliiRezultat.innerText = `Venitul tău este mai mare decât limita de ${plafonMaxim} Lei admisă pentru acest program.`;
            }
        });
    </script>
</Layout>