---
import Layout from '../../layouts/Layout.astro';
import { readFileSync } from 'fs';
import { parse } from 'csv-parse/sync';

export async function getStaticPaths() {
    const fileContent = readFileSync('./src/data/facultati.csv', 'utf-8');
    const records = parse(fileContent, { columns: true, skip_empty_lines: true, trim: true });
    return records.map((row) => ({ params: { id: row.id }, props: { info: row } }));
}

const { info } = Astro.props;
const aniStudiu = parseInt(info.durata_ani);
const taxaAnuala = parseFloat(info.taxa_anuala_lei);
const salariuNet = parseFloat(info.salariu_debutant_net);
const renderList = (text) => text ? text.split('<br>').filter(Boolean) : [];
---

<Layout 
    title={`Rentabilitate ${info.specializare} - ${info.universitate}`}
    description={`Vezi în câți ani îți recuperezi investiția în facultatea de ${info.specializare}. Simulator profitabilitate carieră 2026.`}
>
    <main class="max-w-4xl mx-auto px-4 pb-16">
        <nav class="py-6">
            <a href="/facultati" class="text-sm font-bold text-indigo-700 hover:text-indigo-900 flex items-center gap-2">
                ← Înapoi la listă
            </a>
        </nav>

        <header class="mb-12 text-center">
            <h1 class="text-4xl font-black text-gray-900 mb-2">{info.specializare}</h1>
            <p class="text-indigo-600 font-bold uppercase tracking-widest text-sm">{info.universitate}</p>
        </header>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-12">
            <div class="lg:col-span-2 bg-indigo-900 rounded-[40px] p-8 text-white shadow-2xl shadow-indigo-200">
                <h2 class="text-2xl font-bold mb-8">Simulator Recuperare Investiție</h2>
                
                <div class="space-y-6">
                    <div>
                        <label class="block text-xs font-bold uppercase opacity-60 mb-2">Costuri lunare de trai (Chirie + Masă):</label>
                        <input type="range" id="traiInput" min="1500" max="5000" step="100" value="2500" class="w-full h-2 bg-indigo-700 rounded-lg appearance-none cursor-pointer accent-white">
                        <div class="flex justify-between mt-2 text-sm font-bold">
                            <span>1.500 Lei</span>
                            <span id="traiValue" class="text-indigo-300">2.500 Lei</span>
                            <span>5.000 Lei</span>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 pt-6 border-t border-indigo-800">
                        <div>
                            <p class="text-xs opacity-60 uppercase font-bold mb-1">Investiție Totală (Taxă + Trai)</p>
                            <p class="text-3xl font-black" id="costTotalDisplay">0 Lei</p>
                        </div>
                        <div class="text-right">
                            <p class="text-xs opacity-60 uppercase font-bold mb-1">Timp Recuperare (Luni)</p>
                            <p class="text-3xl font-black text-indigo-300" id="roiDisplay">0 Luni</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="space-y-6">
                <div class="bg-white p-6 rounded-3xl border border-gray-100 shadow-sm">
                    <p class="text-[10px] font-black uppercase text-gray-400 mb-1">Salariu Debutant Estimativ</p>
                    <p class="text-2xl font-black text-indigo-600">{info.salariu_debutant_net} Lei</p>
                </div>
                <div class="bg-indigo-50 p-6 rounded-3xl border border-indigo-100">
                    <p class="text-[10px] font-black uppercase text-indigo-700 mb-1">Durată Studii</p>
                    <p class="text-2xl font-black text-indigo-900">{info.durata_ani} Ani</p>
                </div>
            </div>
        </div>

        <section class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="bg-white p-8 rounded-3xl border border-gray-100">
                <h3 class="font-bold text-xl mb-4">Piața Muncii în 2026</h3>
                <p class="text-gray-600 leading-relaxed">{info.piata_muncii}</p>
            </div>
            <div class="bg-white p-8 rounded-3xl border border-gray-100">
                <h3 class="font-bold text-xl mb-4">Acte Admitere</h3>
                <ul class="space-y-3">
                    {renderList(info.acte_admitere).map((act) => (
                        <li class="flex items-center gap-2 text-gray-600 text-sm">
                            <span class="text-indigo-500 font-bold">•</span> {act}
                        </li>
                    ))}
                </ul>
            </div>
        </section>
    </main>

    <script is:inline define:vars={{ aniStudiu, taxaAnuala, salariuNet }}>
        const traiInput = document.getElementById('traiInput');
        const traiValue = document.getElementById('traiValue');
        const costTotalDisplay = document.getElementById('costTotalDisplay');
        const roiDisplay = document.getElementById('roiDisplay');

        const calculate = () => {
            const costTraiLunar = parseInt(traiInput.value);
            traiValue.innerText = costTraiLunar.toLocaleString() + " Lei";

            const costStudiuTotal = (taxaAnuala * aniStudiu) + (costTraiLunar * 12 * aniStudiu);
            const profitLunarDupaAbsolvire = salariuNet - costTraiLunar;

            let luniRecuperare = costStudiuTotal / profitLunarDupaAbsolvire;
            
            costTotalDisplay.innerText = Math.round(costStudiuTotal).toLocaleString() + " Lei";
            roiDisplay.innerText = profitLunarDupaAbsolvire > 0 ? Math.round(luniRecuperare) : "∞";
        };

        traiInput.addEventListener('input', calculate);
        calculate();
    </script>
</Layout>