---
import Layout from '../../layouts/Layout.astro';
import { readFileSync } from 'fs';
import { parse } from 'csv-parse/sync';

const fileContent = readFileSync('./src/data/facultati.csv', 'utf-8');
const facultati = parse(fileContent, { columns: true, skip_empty_lines: true, trim: true });

// Grupăm pe județe și sortăm alfabetic județele
const judete = [...new Set(facultati.map(f => f.judet))].sort();
---

<Layout title="Facultate Profit - Harta Națională a Studiilor">
    <main class="max-w-5xl mx-auto px-4 pb-20">
        <header class="py-16 text-center">
            <h1 class="text-4xl md:text-6xl font-black text-gray-900 mb-4 tracking-tight">
                Facultate <span class="text-indigo-600">Profit</span>
            </h1>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">Analiza rentabilității studiilor pe județe. Alege orașul care îți oferă cel mai bun ROI.</p>
        </header>

        <div class="space-y-16">
            {judete.map(judet => (
                <section>
                    <div class="flex items-center gap-4 mb-8 border-b border-gray-100 pb-2">
                        <span class="text-sm font-black text-indigo-400 uppercase tracking-widest">Județul</span>
                        <h2 class="text-3xl font-black text-gray-800">{judet}</h2>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        {facultati.filter(f => f.judet === judet).map(item => (
                            <a href={`/facultati/${item.id}`} class="group">
                                <div class="bg-white p-6 rounded-[32px] border border-gray-100 shadow-sm hover:shadow-xl transition-all flex flex-col h-full group-hover:border-indigo-200">
                                    <div class="flex justify-between mb-4">
                                        <span class="text-[10px] font-bold px-2 py-0.5 bg-indigo-50 text-indigo-700 rounded uppercase">{item.status}</span>
                                        <span class="text-xs font-bold text-gray-400">{item.durata_ani} Ani</span>
                                    </div>
                                    <h3 class="text-xl font-bold text-gray-900 group-hover:text-indigo-600 transition-colors mb-1">{item.specializare}</h3>
                                    <p class="text-xs text-gray-500 mb-6">{item.universitate}</p>
                                    
                                    <div class="mt-auto pt-4 border-t border-gray-50 flex justify-between items-center">
                                        <div>
                                            <p class="text-[10px] text-gray-400 uppercase font-bold">Salariu Debut</p>
                                            <p class="font-black text-indigo-600">{item.salariu_debutant_net} Lei</p>
                                        </div>
                                        <div class="w-8 h-8 rounded-full bg-indigo-50 flex items-center justify-center text-indigo-600 group-hover:bg-indigo-600 group-hover:text-white transition-all">
                                            →
                                        </div>
                                    </div>
                                </div>
                            </a>
                        ))}
                    </div>
                </section>
            ))}
        </div>
    </main>
</Layout>