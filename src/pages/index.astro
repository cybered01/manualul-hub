                    p.classList.remove('bg-blue-600', 'text-white', 'shadow-lg', 'shadow-blue-200');
                    p.classList.add('bg-white', 'text-gray-600', 'border', 'border-gray-100');
                });
                pill.classList.remove('bg-white', 'text-gray-600', 'border', 'border-gray-100');
                pill.classList.add('bg-blue-600', 'text-white', 'shadow-lg', 'shadow-blue-200');

                // Filter
                currentFilter = pill.getAttribute('data-filter');
                updateDisplay();
            });
        });
    </script>
