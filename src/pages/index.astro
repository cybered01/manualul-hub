            sections.forEach(section => {
                if (section.id === 'no-results') return;

                const sectionCards = section.querySelectorAll('.tool-card');
                let sectionVisible = 0;

                sectionCards.forEach(card => {
                    const title = card.getAttribute('data-title') || '';
