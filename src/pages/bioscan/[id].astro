---
export const prerender = true;
import Layout from '../../layouts/Layout.astro';
import WhatsAppButton from '../../components/WhatsAppButton.astro';
import records from '../../data/bioscan.json';

export async function getStaticPaths() {
    return records.map((row) => ({ params: { id: row.id }, props: { info: row } }));
}

const { info } = Astro.props;
---

<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": "BioScan: " + info.produs,
  "url": "https://manualul.ro/bioscan/" + info.id,
  "description": "AnalizƒÉ comparativƒÉ de pre»õ »ôi calitate (Bio vs Conven»õional) pentru " + info.produs + ". AflƒÉ costul real al sƒÉnƒÉtƒÉ»õii.",
  "applicationCategory": "HealthApplication",
  "operatingSystem": "Any",
  "about": {
    "@type": "Product",
    "name": info.produs,
    "category": info.categorie
  },
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "RON"
  }
})}>
</script>

<Layout 
    title={`BioScan: ${info.produs} - MeritƒÉ diferen»õa?`}
    description={`Calculator de pre»õ Bio vs Conven»õional pentru ${info.produs}. Vezi c√¢t te costƒÉ sƒÉnƒÉtatea pe an.`}
>
    <main class="max-w-4xl mx-auto px-4 pb-24">
        <nav class="py-6">
            <a href="/bioscan" class="text-sm font-bold text-lime-700 hover:underline flex items-center gap-2">
                ‚Üê √énapoi la raft
            </a>
        </nav>

        <header class="mb-10 text-center">
            <span class="px-3 py-1 bg-lime-100 text-lime-800 rounded-full text-[10px] font-black uppercase tracking-widest border border-lime-200 mb-4 inline-block">
                {info.categorie}
            </span>
            <h1 class="text-4xl md:text-5xl font-black text-gray-900 tracking-tight">{info.produs}</h1>
            <p class="text-gray-500 mt-2 font-medium">{info.unitate}</p>
        </header>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-12">
            
            <div class="bg-gray-900 rounded-[40px] p-8 md:p-10 text-white shadow-2xl relative overflow-hidden">
                <div class="relative z-10">
                    <h2 class="text-xl font-bold mb-6 flex items-center gap-2">
                        üßÆ Calculator Impact Anual
                    </h2>
                    
                    <div class="mb-8">
                        <label class="block text-[10px] font-black uppercase mb-3 opacity-60 tracking-widest">
                            C√¢te unitƒÉ»õi consumi pe sƒÉptƒÉm√¢nƒÉ?
                        </label>
                        <div class="flex items-center gap-4">
                            <input type="number" id="qtyInput" value="2" min="1" class="w-full bg-white/10 border-2 border-white/20 rounded-2xl p-4 text-3xl font-black text-lime-400 focus:bg-white/20 outline-none transition-all text-center">
                            <span class="text-sm font-bold opacity-50 whitespace-nowrap">x {info.unitate}</span>
                        </div>
                    </div>

                    <div class="pt-8 border-t border-white/10 space-y-6">
                        <div class="flex justify-between items-center opacity-60">
                            <span class="text-sm">Cost anual standard:</span>
                            <span id="stdCost" class="font-bold line-through decoration-red-500">0 Lei</span>
                        </div>
                        <div class="flex justify-between items-center text-lime-300">
                            <span class="text-sm font-bold">Cost anual BIO:</span>
                            <span id="bioCost" class="font-bold">0 Lei</span>
                        </div>
                        
                        <div class="bg-lime-600/20 p-6 rounded-3xl border border-lime-500/30 text-center mt-4 mb-6">
                            <p class="text-[10px] uppercase font-black text-lime-400 mb-1">Diferen»õa (Investi»õia √Æn sƒÉnƒÉtate)</p>
                            <p class="text-4xl font-black text-white" id="diffCost">0 Lei</p>
                            <p class="text-[10px] opacity-60 mt-2">pe an / de persoanƒÉ</p>
                        </div>

                        <WhatsAppButton idDesktop="whatsappBtn" idMobile="whatsappBtnFloating" class="scale-90" />
                    </div>
                </div>
                
                <div class="absolute top-0 right-0 w-64 h-64 bg-lime-500 rounded-full blur-[100px] opacity-10 pointer-events-none"></div>
            </div>

            <div class="space-y-6">
                <div class="bg-white p-8 rounded-[32px] border-l-8 border-gray-200 shadow-sm relative overflow-hidden">
                    <div class="absolute top-4 right-4 text-4xl opacity-10 grayscale">üè≠</div>
                    <h3 class="font-black text-gray-400 uppercase text-xs tracking-widest mb-4">Conven»õional (Riscuri)</h3>
                    <p class="text-gray-600 font-medium leading-relaxed">
                        "{info.riscuri_conventional}"
                    </p>
                </div>

                <div class="bg-lime-50 p-8 rounded-[32px] border-l-8 border-lime-500 shadow-sm relative overflow-hidden">
                    <div class="absolute top-4 right-4 text-4xl opacity-20">üåø</div>
                    <h3 class="font-black text-lime-700 uppercase text-xs tracking-widest mb-4">Certificat Ecologic (Beneficii)</h3>
                    <p class="text-lime-900 font-bold leading-relaxed">
                        "{info.beneficii_bio}"
                    </p>
                </div>

                <div class="bg-white p-6 rounded-3xl border border-gray-100 text-xs text-gray-500 italic text-center">
                    "{info.descriere}"
                </div>
            </div>
        </div>
    </main>


    <div id="stickyBar" class="fixed bottom-0 left-0 w-full bg-white/90 backdrop-blur-md border-t border-lime-100 p-4 shadow-[0_-10px_25px_rgba(0,0,0,0.1)] md:hidden z-40">
        <div class="flex justify-between items-center">
            <div>
                <p class="text-[10px] font-black uppercase text-gray-400 leading-none mb-1">Diferen»õƒÉ AnualƒÉ</p>
                <p id="stickyTotal" class="text-2xl font-black text-lime-600 leading-none">0 Lei</p>
            </div>
            <button onclick="window.scrollTo({top: 200, behavior: 'smooth'})" class="bg-gray-900 text-white px-4 py-2 rounded-xl text-xs font-bold active:scale-95 transition-transform">
                Configurare ‚Üë
            </button>
        </div>
    </div>

    <script is:inline define:vars={{ pretStd: info.pret_standard, pretBio: info.pret_bio, produs: info.produs }}>
        const btnWhatsapp = document.getElementById('whatsappBtn');
        const btnWhatsappFloating = document.getElementById('whatsappBtnFloating');
        const qtyInput = document.getElementById('qtyInput');
        
        const dispStd = document.getElementById('stdCost');
        const dispBio = document.getElementById('bioCost');
        const dispDiff = document.getElementById('diffCost');
        const dispStickyTotal = document.getElementById('stickyTotal');

        function calculate() {
            const qty = parseFloat(qtyInput.value) || 0;
            const weeks = 52;

            // Calcule Anuale
            const annualStd = qty * pretStd * weeks;
            const annualBio = qty * pretBio * weeks;
            const diff = annualBio - annualStd;

            // Update UI
            if(dispStd) dispStd.innerText = Math.round(annualStd).toLocaleString() + " Lei";
            if(dispBio) dispBio.innerText = Math.round(annualBio).toLocaleString() + " Lei";
            
            // Formatare Diferen»õƒÉ (Desktop + Mobile Sticky)
            if(dispDiff) dispDiff.innerText = "+" + Math.round(diff).toLocaleString() + " Lei";
            if(dispStickyTotal) dispStickyTotal.innerText = "+" + Math.round(diff).toLocaleString() + " Lei";

            // Update Buton WhatsApp
            const mesaj = `Am comparat alimentele Bio vs Conven»õional pentru ${produs} pe Manualul.ro üçé\nInvesti»õia anualƒÉ √Æn sƒÉnƒÉtate este de ${Math.round(diff).toLocaleString()} RON. MeritƒÉ? Vezi analiza: ${window.location.href}`;
            const link = `https://api.whatsapp.com/send?text=${encodeURIComponent(mesaj)}`;

            if (btnWhatsapp) btnWhatsapp.href = link;
            if (btnWhatsappFloating) btnWhatsappFloating.href = link;
        }

        // AscultƒÉtori
        if(qtyInput) {
            qtyInput.addEventListener('input', calculate);
        }

        // Run
        calculate();
    </script>
</Layout>