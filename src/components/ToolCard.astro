---
interface Props {
  title: string;
  description: string;
  href: string;
  icon: string;
  tag?: string;
  colorClass?: string;
  cta: string;
}

const { title, description, href, icon, tag, colorClass = "border-b-slate-600", cta } = Astro.props;
---

<a
    href={href}
    class:list={[
        "tool-card group p-8 bg-white rounded-3xl border border-gray-100 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 text-left flex flex-col border-b-4 relative overflow-hidden",
        colorClass
    ]}
    data-title={title.toLowerCase()}
    data-description={description.toLowerCase()}
>
    {tag && (
        <span class="absolute top-4 right-4 bg-red-600 text-white text-[10px] font-bold px-2 py-1 rounded-full animate-pulse uppercase tracking-wider">
            {tag}
        </span>
    )}
    <div class="w-14 h-14 bg-gray-50 rounded-2xl flex items-center justify-center mb-6 font-bold text-3xl group-hover:scale-110 transition-transform duration-300">
        {icon}
    </div>
    <h2 class="text-2xl font-bold text-gray-800 mb-2 group-hover:text-blue-700 transition-colors">
        {title}
    </h2>
    <p class="text-gray-500 mb-6 flex-grow leading-relaxed">
        {description}
    </p>
    <span class="text-gray-900 font-bold flex items-center gap-2 group-hover:translate-x-2 transition-transform">
        {cta} <span class="text-xl">â†’</span>
    </span>
</a>
