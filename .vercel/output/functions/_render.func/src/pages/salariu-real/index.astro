    <script is:inline>
        const inSalariuNet = document.getElementById('inSalariuNet');
        const inPretProdus = document.getElementById('inPretProdus');
        const outOre = document.getElementById('rezultatOre');
        const outZile = document.getElementById('rezultatZile');
        const btnWhatsappDesktop = document.getElementById('whatsappBtn');
        const btnWhatsappMobile = document.getElementById('whatsappBtnFloating');

        function calculateSalariuReal() {
            const salariuNet = parseFloat(inSalariuNet.value) || 0;
            const pretProdus = parseFloat(inPretProdus.value) || 0;

            if (salariuNet <= 0 || pretProdus <= 0) {
                outOre.innerText = "N/A";
                outZile.innerText = "N/A";
                return;
            }

            const oreLucratePeLuna = 20 * 8; // 20 zile * 8 ore/zi
            const salariuOra = salariuNet / oreLucratePeLuna;

            const oreNecesare = pretProdus / salariuOra;
            const zileNecesare = oreNecesare / 8;

            outOre.innerText = Math.round(oreNecesare).toLocaleString() + " ore";
            outZile.innerText = Math.round(zileNecesare).toLocaleString() + " zile";

            // Update WhatsApp Button
