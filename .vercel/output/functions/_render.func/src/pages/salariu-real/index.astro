            btnWhatsappDesktop.href = whatsappLink;
            btnWhatsappMobile.href = whatsappLink;
        }

        inSalariuNet.addEventListener('input', calculateSalariuReal);
        inPretProdus.addEventListener('input', calculateSalariuReal);
        calculateSalariuReal();
    </script>
